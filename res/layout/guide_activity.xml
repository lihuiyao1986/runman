<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/mTop40"
        android:orientation="vertical" >

        <Button
            android:id="@+id/start_button"
    	    android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:layout_gravity="center_horizontal"
    		android:layout_marginTop="@dimen/mTop10"
    		android:layout_marginLeft="@dimen/mLeft40"
    		android:layout_marginRight="@dimen/mLeft40"
    		android:textSize="@dimen/tSize16"
    		android:textColor="@color/guide_font_color"
    		android:background="@drawable/shape_white_btn"
    		android:text="@string/start_button_text"
    		android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/mTop10"
            android:layout_marginBottom="@dimen/mTop10"
            android:gravity="center"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>